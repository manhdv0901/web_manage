<div class="addpatient">
    <div class="wrapper bg-gra-02 wrapper--w680 p-t-130 p-b-100">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title">Chỉnh sửa bệnh nhân</h2>
                <form method="post" action="/update-patient">
                    <div class="row row-space">
                        <div class="col-2">
                            <p class="input--style-4" type="text" name="key">{{patient._id}}</p>

                            <div class="input-group">
                                <label class="label">ID</label>
                                <input class="input--style-4" type="text" name="id" value="{{patient.id}}">
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Username</label>
                                <input class="input--style-4" type="text" name="username" value="{{patient.username}}">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space" >
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Họ và Tên</label>
                                <input class="input--style-4" maxlength="99" type="text" name="name" value="{{patient.name}}">
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Password</label>
                                <input class="input--style-4" min="1" max="120" name="password" value="{{patient.password}}">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Tuổi</label>
                                <input class="input--style-4" type="text" name="age" value="{{patient.age}}">
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Số Điện Thoại</label>
                                <input class="input--style-4" type="text" name="phone" value="{{patient.phone}}">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Ngày Sinh</label>
                                <div class="input-group-icon">
                                    <input class="input--style-4 js-datepicker" type="text" name="birth_day" value="{{patient.birth_day}}">
                                    <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Giới Tính</label>
                                <div class="p-t-10">
                                    <label class="radio-container m-r-45">Male
                                        <input type="radio" name="gender" value="{{patient.gender}}">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="radio-container">Female
                                        <input type="radio" name="gender" value="{{patient.gender}}">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Phòng</label>
                                <input class="input--style-4"  name="number_room" value="{{patient.number_room}}">
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <label class="label">Thiết bị</label>
                                <input class="input--style-4" type="text" name="key_device" value="{{patient.key_device}}">
                            </div>
                        </div>
                    </div>

                    <div class="p-t-15">
                        <button class="btn btn--radius-2 btn--blue" type="submit">Lưu chỉnh sửa bệnh nhân</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
